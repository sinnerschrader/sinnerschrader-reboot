<section class="offering">
  {% include section-header, title: "Offering", number: "02" %}
  <div class="offering--wrapper">
	  <div class="offering__heading-wrapper">
		  <h2 class="offering__heading-top">
			  Insight <span class="is-font-ogg"> & Direction - </span>Products <span class="is-font-ogg">& Services</span>
		  </h2>
		  <h2 class="offering__heading-bottom">
			  <span class="is-font-ogg">Digital Platforms -</span> Marketing <span class="is-font-ogg">Growth</span>
		  </h2>
	  </div>

	  <div class="grid offering--info">
		  {% for offering in offerings %}
			<div class="col-3">
				<h3 class="offering__title">{{ offering.title }}</h3>
				<ul class="offering__list">
					{% for item in offering.list %}
						<li class="offering__item">{{ item.item }}</li>
					{% endfor %}
				</ul>
			</div>
		  {% endfor %}
	  </div>

    <div class="offering__circle">
      <img src="./assets/circle-text.svg" alt="">
    </div>
  </div>
</section>
