	{% include section-header, title: "Idea", number: "01" %}

	<div class="grid overlap__wrapper">
		<div class="overlap__item overlap__item--img col-start-5 col-end-9
			col-start-4-xs col-end-13-xs">
			<picture class="overlap__img--right">
				<source srcset="./assets/born_from_digital_2.webp" type="image/webp" alt=""
					/>
				<img src="./assets/born_from_digital_2.jpg" alt="Look down an office hallway
					where two people are talking" class="parallax-slow"/>
			</picture>
			<div class="overlap__line-container">
				<div class="overlap__line"></div>
			</div>
		</div>
