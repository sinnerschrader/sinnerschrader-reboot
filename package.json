{
  "name": "sinnerschrader-reboot",
  "version": "0.1.0",
  "private": true,
  "description": "SinnerSchrader website reboot",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow npm",
    "postinstall": "husky install",
    "start": "npm run dev",
    "dev": "run-p tools:clean watch:css watch:js watch:html tools:responsiveImages",
    "build": "run-s tools:clean build:css build:js build:html tools:responsiveImages",
    "build:html": "eleventy",
    "build:css": "sass ./src/styles/index.scss _site/styles.css && npm run tools:postcss",
    "build:js": "esbuild ./src/_includes/js/main.ts --outfile=_site/bundle.js --bundle --minify",
    "watch:html": "eleventy --serve",
    "watch:css": "sass --watch ./src/styles/index.scss _site/styles.css",
    "watch:js": "esbuild ./src/_includes/js/main.js --sourcemap --outfile=_site/bundle.js --bundle --watch",
    "lint:stylelint": "stylelint ./src/styles/**/*.scss",
    "lint:a11y-check": "pa11y-ci",
    "tools:postcss": "postcss _site/styles.css --use autoprefixer cssnano --output _site/styles.css",
    "tools:responsiveImages": "rimraf ./_site/assets/images/ && node ./config/sharp.js",
    "tools:clean": "rimraf ./_site/"
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "netlify-cms": "^2.10.189",
    "simple-parallax-js": "^5.6.2",
    "swiper": "^8.0.7"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "autoprefixer": "^10.4.4",
    "chokidar": "^3.5.3",
    "cssnano": "^5.1.5",
    "esbuild": "^0.14.28",
    "fibers": "^5.0.1",
    "fs-extra": "^10.0.1",
    "glob": "^7.2.0",
    "html-minifier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "npm-run-all": "^4.1.5",
    "pa11y-ci": "^3.0.1",
    "postcss": "^8.4.12",
    "prettier": "^2.6.1",
    "postcss-cli": "^9.1.0",
    "rimraf": "^3.0.2",
    "sass": "^1.49.9",
    "sharp": "^0.30.3",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sinnerschrader/sinnerschrader-reboot.git"
  },
  "author": "SinnerSchrader",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sinnerschrader/sinnerschrader-reboot/issues"
  },
  "homepage": "https://github.com/sinnerschrader/sinnerschrader-reboot#readme"
}
