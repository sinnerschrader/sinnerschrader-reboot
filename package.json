{
  "name": "sinnerschrader-reboot",
  "version": "0.1.0",
  "private": true,
  "description": "SinnerSchrader website reboot",
  "main": "index.js",
  "scripts": {
    "postinstall": "husky install",
    "start": "npm run start:dev",
    "start:dev": "run-p clean 11ty:watch esbuild:watch",
    "build": "run-s clean esbuild:build 11ty:build",
    "clean": "rimraf ./_site/",
    "11ty:build": "eleventy",
    "11ty:watch": "eleventy --serve",
    "esbuild:build": "esbuild ./_includes/js/main.js --outfile=_site/bundle.js --bundle",
    "esbuild:watch": "esbuild ./_includes/js/main.js --outfile=_site/bundle.js --bundle --watch"
  },
  "dependencies": {
    "@glidejs/glide": "^3.4.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "autoprefixer": "^10.2.4",
    "chokidar": "^3.5.1",
    "cssnano": "^4.1.10",
    "esbuild": "^0.8.44",
    "fibers": "^5.0.0",
    "fs-extra": "^9.1.0",
    "html-minifier": "^4.0.0",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sass": "^1.32.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sinnerschrader/sinnerschrader-reboot.git"
  },
  "author": "SinnerSchrader",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sinnerschrader/sinnerschrader-reboot/issues"
  },
  "homepage": "https://github.com/sinnerschrader/sinnerschrader-reboot#readme"
}
